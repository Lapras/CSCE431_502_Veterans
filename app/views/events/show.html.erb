<p style="color: green"><%= notice %></p>

<%= render @event %>

<h2>Roll Call</h2>

<%= form_with url: admin_event_roll_call_path(@event), method: :patch, local: true do %>
  <table>
    <thead>
      <tr>
        <th style="text-align:left;">Member</th>
        <th>Present</th>
        <th>Absent</th>
        <th>Tardy</th>
        <th>Excused</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% Array(@attendances).each do |a| %>
        <tr>
          <td><%= a.user.full_name.presence || a.user.email %></td>

          <td style="text-align:center;">
            <%= radio_button_tag "attendances[#{a.id}][status]", "present",  a.present? %>
          </td>
          <td style="text-align:center;">
            <%= radio_button_tag "attendances[#{a.id}][status]", "absent",   a.absent? %>
          </td>
          <td style="text-align:center;">
            <%= radio_button_tag "attendances[#{a.id}][status]", "tardy",    a.tardy? %>
          </td>
          <td style="text-align:center;">
            <%= radio_button_tag "attendances[#{a.id}][status]", "excused",  a.excused? %>
          </td>

          <td>
            <% klass =
                if a.present?
                  "status status--present"
                elsif a.absent?
                  "status status--absent"
                elsif a.tardy?
                  "status status--tardy"
                elsif a.excused?
                  "status status--excused"
                else
                  "status status--unknown"
                end %>
            <span class="<%= klass %>"><%= a.status || "â€”" %></span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div style="margin-top:1rem;">
    <%= submit_tag "Save Progress" %>
  </div>
<% end %>

<div style="margin-top:0.75rem;">
  <%= link_to "Edit this event", edit_event_path(@event) %> |
  <%= link_to "Back to events", events_path %> |
  <%= link_to "Delete this event", event_confirm_delete_event_path(@event) %> |
  <%= button_to "Destroy this event", @event, method: :delete %>
</div>