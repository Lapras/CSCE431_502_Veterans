
<h1>Users</h1>

<%= link_to "New user", new_admin_user_path, class: "action-button" %>
<%= link_to "Membership Requests", admin_membership_requests_path, class: "action-button" %>

<table>
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>ID</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% next if user.roles.empty? %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.uid %></td>
        <td><%= user.roles.pluck(:name).join(", ") %></td>
        <td>
          <%= link_to "Show", [:admin, user] %>
          <%= link_to "Edit", edit_admin_user_path(user) %>
          <%= link_to "Delete", [:admin, user], data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>